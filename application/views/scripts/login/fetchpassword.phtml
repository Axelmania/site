	<?php 
		if ($this->action == 'confirm')
		{
			// let the user know if the password was succesfully changed
			if ( count($this->errors) == 0)
			{
				echo '<p>'.$this->translate->_('Account-fetchpassword-confirmed', $this->language).' <strong>'.$this->username.'</strong>.</p>';
			}
			// if there were errors, show error message
			else
			{
				echo '<p>'.$this->translate->_('Account-fetchpassword-confirmationfailed', $this->language) .'</p>';
			}
		}
		elseif ($this->action == 'complete')
		{
			echo '<p>'.$this->translate->_('Account-fetchpassword-complete', $this->language) .'</p>';
		}
		else
		{
			echo '<p>'.$this->translate->_('Account-fetchpassword-request', $this->language) .'</p>';
			echo '<form action="" method="post">
					<p>
					'.$this->translate->_('Username', $this->language).'
					<input type="text" name="username" />
					<input type="submit" value="Ok" />
					</p>
				</form>';
		}
